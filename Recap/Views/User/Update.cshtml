@model UpdateUserDTO;

<a asp-controller="User" asp-action="Index">Retour</a>

<div asp-asp-validation-summary="ModelOnly"></div>

<form asp-route-id="@ViewBag.id" method="post">
    <label>Firstname</label>
    <input type="text" asp-for="Firstname" />
